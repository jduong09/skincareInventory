html
  head
    meta(charset= 'UTF-8')
    meta(
      name= 'viewport'
      content= 'width=device-width, initial-scale=1.0'
      )
    title= title
    link(rel= 'stylesheet' type= 'text/css' href= './css/meyers_reset.css')
    link(rel= 'stylesheet' type= 'text/css' href= './css/styles.css')
    script(type = 'text/javascript' src= '../js/index.js')
  body
    header
      h1= 'Skin Care Products'
    main
      div(id= 'div-items-header')
        h2= currentCategory
        ul(id= 'list-item-actions')
          li
            select(id= 'select-category')
              option(value= '' selected= `${currentCategory === 'All Items' ? true : false}`)= 'Filter By...'
              each category in categories
                option(value= category.name selected= currentCategory === category.name )= category.name
          li
            button(id= 'btn-item-new' type= 'button')= 'Add Item'
          li
            button(id= 'btn-category-new' type= 'button')= 'Add Category'
      div(id= 'div-items')
        ul(id= 'list-items')
          each item in items
            li(class= 'li-item' data-item-id= `${item.id}`)
              h3= item.name
              span= item.brand
              span= `Skin Type: ${item.skin_type}`
              div
                button(class= 'btn-update-item' type= 'button')= 'Update'
                button(class= 'btn-delete-item' type= 'button')= 'Delete'
      div(id= 'div-category-new' class= 'hide')
        h2= 'New Item Category'
        form(id= 'form-category-new' method='POST' action='/category/new')
          label(for='input-category')= 'Name: '
            input(type= 'text' id= 'input-category' name= 'category' placeholder= 'Toner, Exfoliator...')
          button(type= 'submit' id= 'btn-submit-category')= 'Add Category'
